<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>cumulocity-dependencies</artifactId>
		<groupId>com.nsn.cumulocity.dependencies</groupId>
		<version>0.7.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
	<groupId>com.nsn.cumulocity.dependencies.osgi</groupId>
	<artifactId>osgi-dependencies</artifactId>
	<packaging>pom</packaging>
	<name>Cumulocity Dependencies :: OSGi Dependencies</name>
	<modules>
		<module>activation</module>
		<module>mail</module>
		<module>asm</module>
		<module>stax-api</module>
		<module>jaxb-api</module>
		<module>commons-logging</module>
		<module>commons-httpclient</module>
		<module>antlr</module>
		<module>stringtemplate</module>
		<module>antlr-runtime</module>
		<module>cglib-nodep</module>
		<module>esper</module>
		<module>svenson</module>
		<module>jersey-core</module>
		<module>jersey-server</module>
		<module>jersey-client</module>
		<module>jersey-apache-client</module>
		<module>aspectjrt</module>
		<module>aspectjweaver</module>
		<module>log4j-extras</module>
		<module>jcouchdb</module>
	</modules>
	
	<properties>
		<activation.version>1.1</activation.version>
		<osgi.activation.version>${activation.version}-${project.parent.version}</osgi.activation.version>
		
		<antlr.version>2.7.7</antlr.version>
		<osgi.antlr.version>${antlr.version}-${project.parent.version}</osgi.antlr.version>
		
		<antlr-runtime.version>3.2</antlr-runtime.version>
		<osgi.antlr-runtime.version>${antlr-runtime.version}-${project.parent.version}</osgi.antlr-runtime.version>
		
		<stringtemplate.version>3.2</stringtemplate.version>
		<osgi.stringtemplate.version>${stringtemplate.version}-${project.parent.version}</osgi.stringtemplate.version>
		
		<asm.version>3.1</asm.version>
		<osgi.asm.version>${asm.version}-${project.parent.version}</osgi.asm.version>
	
		
		<aspectj.version>1.6.8</aspectj.version>
		<osgi.aspectj.version>${aspectj.version}-${project.parent.version}</osgi.aspectj.version>
		
		<cglib-nodep.version>2.2</cglib-nodep.version>
		<osgi.cglib-nodep.version>${cglib-nodep.version}-${project.parent.version}</osgi.cglib-nodep.version>
		
		<commons-logging.version>1.1.1</commons-logging.version>
		<osgi.commons-logging.version>${commons-logging.version}-${project.parent.version}</osgi.commons-logging.version>
		
		<commons-httpclient.version>3.1</commons-httpclient.version>
		<osgi.commons-httpclient.version>${commons-httpclient.version}-${project.parent.version}</osgi.commons-httpclient.version>
		
		<esper.version>4.4.0</esper.version>
		<osgi.esper.version>${esper.version}${project.parent.version}</osgi.esper.version>
		
		<stax-api.version>1.0-2</stax-api.version>
		<osgi.stax-api.version>${stax-api.version}-${project.parent.version}</osgi.stax-api.version>
		
		<jaxb-api.version>2.1</jaxb-api.version>
		<osgi.jaxb-api.version>${jaxb-api.version}-${project.parent.version}</osgi.jaxb-api.version>
		
		<jcouchdb.version>1.0.1-1</jcouchdb.version>
		<osgi.jcouchdb.version>${jcouchdb.version}-${project.parent.version}</osgi.jcouchdb.version>
		
		<jersey.version>1.8</jersey.version>
		<osgi.jersey.version>${jersey.version}-${project.parent.version}</osgi.jersey.version>
		
		<mail.version>1.4</mail.version>
		<osgi.mail.version>${mail.version}-${project.parent.version}</osgi.mail.version>
		
		<apache-log4j-extras.version>1.1</apache-log4j-extras.version>
		<osgi.apache-log4j-extras.version>${apache-log4j-extras.version}-${project.parent.version}</osgi.apache-log4j-extras.version>

		<svenson.version>1.3.8</svenson.version>
		<osgi.svenson.version>${svenson.version}-${project.parent.version}</osgi.svenson.version>
	</properties>
	
	<build>
		<sourceDirectory>${project.build.directory}/sources</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
					<excludes>META-INF/MANIFEST.MF</excludes>
				</configuration>
				<executions>
					<execution>
						<id>unpack-dependencies</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>unpack-dependencies-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<classifier>sources</classifier>
							<failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
							<outputDirectory>${project.build.directory}/sources</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/*</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>package</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
						<configuration>
							<excludeResources>true</excludeResources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
