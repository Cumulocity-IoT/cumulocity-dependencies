        <legal.version>1.0</legal.version>
        <osgi.private>
            ${osgi.private.pkg}*;version=${pulsar-client.version};-split-package:=merge-first
        </osgi.private>
        <osgi.private.pkg>
            org.apache.pulsar,
            org.apache.pulsar.*
