<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>osgi-dependencies</artifactId>
        <groupId>com.nsn.cumulocity.dependencies.osgi</groupId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>pulsar-client</artifactId>
    <version>${pulsar-client.version}-${project.parent.version}</version>
    <name>Cumulocity :: Dependencies :: OSGi :: Pulsar :: Java Client</name>
    <url>http://startups.jira.com/wiki/display/MTM/Home</url>

    <properties>
        <osgi.export>${osgi.export.pkg}*;version=${pulsar-client.version};-split-package:=merge-first</osgi.export>
        <osgi.export.pkg>
            org.apache.pulsar.client,
            org.apache.pulsar.client.*,
            org.apache.pulsar.common,
            org.apache.pulsar.common.*
        </osgi.export.pkg>
        <osgi.import.pkg>
            !lombok*,
            !javax.validation.*,
            *
        </osgi.import.pkg>
        <legal.version>1.0</legal.version>
        <osgi.private>
            ${osgi.private.pkg}*;version=${pulsar-client.version};-split-package:=merge-first
        </osgi.private>
        <osgi.private.pkg>
            org.apache.pulsar,
            org.apache.pulsar.*
        </osgi.private.pkg>
        <osgi.dynamicimport.pkg />
        <osgi.failok>false</osgi.failok>
        <osgi.embed.dependency />
        <osgi.fragment.host />
        <osgi.native />
        <osgi.activator />
        <osgi.provide.capability />
        <osgi.require.capability />
        <spi.provider />
        <spi.consumer />
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.pulsar</groupId>
            <artifactId>pulsar-client-original</artifactId>
            <version>${pulsar-client.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.pulsar</groupId>
            <artifactId>pulsar-client-admin-original</artifactId>
            <version>${pulsar-client.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.jersey.core</groupId>
            <artifactId>jersey-server</artifactId>
            <version>${jersey.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <includeGroupIds>org.apache.pulsar,org.glassfish.jersey.core,org.glassfish.jersey.media,org.glassfish.jersey.ext</includeGroupIds>
                    <includeArtifactIds>pulsar-client-original,pulsar-client-admin-original,jersey-client,jersey-common,jersey-server,jersey-media-json-jackson,jersey-media-multipart,jersey-entity-filtering</includeArtifactIds>
                    <excludes>
                        META-INF/MANIFEST.MF,
                        META-INF/maven,
                        META-INF/maven/**/*,
                        META-INF/services/javax.ws.rs.ext.RuntimeDelegate
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>org/apache/pulsar/client/impl/NoReconnectPulsarClientBuilder.*</include>
                        <include>org/apache/pulsar/client/impl/NoReconnectPulsarClientImpl.*</include>
                        <include>org/apache/pulsar/client/impl/NoReconnectPulsarProducerImpl.*</include>
                    </includes>
                    <skipMain>false</skipMain>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>4.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Description>${project.name}</Bundle-Description>
                        <Export-Package>${osgi.export}</Export-Package>
                        <Import-Package>${osgi.import.pkg}</Import-Package>
                        <Private-Package>${osgi.private}</Private-Package>
                        <DynamicImport-Package>${osgi.dynamicimport.pkg}</DynamicImport-Package>
                        <Embed-Dependency>${osgi.embed.dependency}</Embed-Dependency>
                        <!-- <Bundle-NativeCode>${osgi.native}</Bundle-NativeCode> -->
                        <Bundle-Activator>${osgi.activator}</Bundle-Activator>
                        <Fragment-Host>${osgi.fragment.host}</Fragment-Host>
                        <Provide-Capability>${osgi.provide.capability}</Provide-Capability>
                        <Require-Capability>${osgi.require.capability}</Require-Capability>
                        <SPI-Provider>${spi.provider}</SPI-Provider>
                        <SPI-Consumer>${spi.consumer}</SPI-Consumer>
                        <_failok>${osgi.failok}</_failok>
                        <_versionpolicy>[$(version;==;$(@)),$(version;+;$(@)))</_versionpolicy>
                        <_removeheaders>Ignore-Package,Include-Resource,Private-Package,Embed-Dependency
                        </_removeheaders>
                    </instructions>
                    <unpackBundle>true</unpackBundle>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
