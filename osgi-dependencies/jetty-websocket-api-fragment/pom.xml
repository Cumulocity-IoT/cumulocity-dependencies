<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>cumulocity-dependencies</artifactId>
        <groupId>com.nsn.cumulocity.dependencies</groupId>
        <version>${revision}${changelist}</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jetty-websocket-api-fragment</artifactId>
    <packaging>bundle</packaging>
    
    <name>Cumulocity Dependencies :: OSGi Dependencies :: Jetty WebSocket API Fragment</name>

    <properties>
        <bundle.symbolicName>com.cumulocity.jetty.websocket.api.fragment</bundle.symbolicName>
    </properties>

    <!-- 
        Fragment bundle to overcome the classloading issue in `org.eclipse.jetty.websocket.api` bundle. See IOT-10990/MTM-39235
     -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${bundle.symbolicName}</Bundle-SymbolicName>
                        <Fragment-Host>org.eclipse.jetty.websocket.api</Fragment-Host>
                        <Import-Package>
                            org.apache.aries.spifly;version="1.2.0"
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
             <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>1.1.0</version>
                <configuration>
                    <updatePomFile>true</updatePomFile>
                    <flattenMode>resolveCiFriendliesOnly</flattenMode>
                </configuration>
                <executions>
                    <execution>
                    <id>flatten</id>
                    <phase>process-resources</phase>
                    <goals>
                        <goal>flatten</goal>
                    </goals>
                    </execution>
                    <execution>
                    <id>flatten.clean</id>
                    <phase>clean</phase>
                    <goals>
                        <goal>clean</goal>
                    </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
