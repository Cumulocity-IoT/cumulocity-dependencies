<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
        <artifactId>osgi-dependencies</artifactId>
        <groupId>com.nsn.cumulocity.dependencies.osgi</groupId>
		<version>0.14.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>equinox-weaving-aspectj</artifactId>
	<version>${osgi.equinox-weaving.version}</version>
	<name>Cumulocity Dependencies :: OSGi Dependencies :: Equinox Weaving AspectJ</name>
    <url>http://startups.jira.com/wiki/display/MTM/Home</url>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.equinox.weaving</groupId>
            <artifactId>equinox-weaving-aspectj</artifactId>
            <version>${equinox-weaving.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/org.eclipse.equinox.weaving.aspectj_1.0.1.v20110502.jar</systemPath>
        </dependency>
        
        <dependency>
            <groupId>com.nsn.cumulocity.dependencies.osgi</groupId>
            <artifactId>aspectjweaver</artifactId>
            <version>${osgi.aspectj.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
	
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <includeGroupIds>org.eclipse.equinox.weaving</includeGroupIds>
                    <includeArtifactIds>equinox-weaving-aspectj</includeArtifactIds>
                    <excludes>META-INF/MANIFEST.MF,META-INF/ECLIPSE*</excludes>
<!--                     <excludes>nothing</excludes> -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
<!--                     <manifestLocation>${project.build.directory}/notNeeded</manifestLocation> -->
                    <instructions>
                        <Bundle-Activator>
                            org.eclipse.equinox.weaving.aspectj.AspectJWeavingActivator
                        </Bundle-Activator>
                        <Bundle-RequiredExecutionEnvironment>
                            J2SE-1.5
                        </Bundle-RequiredExecutionEnvironment>
                        <Export-package>
                            org.eclipse.equinox.*,
                            !*
                        </Export-package>
                        <Import-Package>
                            org.aspectj.weaver.*;resolution:="optional",
                            org.eclipse.osgi.util.*;version="[1.1,2)",
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
</project>
