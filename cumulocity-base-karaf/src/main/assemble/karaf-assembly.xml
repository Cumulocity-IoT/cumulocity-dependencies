<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${custom-karaf.dir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<!-- feature files are overwritten so we don't need original one -->
				<exclude>**/standard-${karaf.version}-features.xml</exclude>
				<!-- unsafe version of library, comes with karaf tarball
				FIXME remove when newer karaf with safe version of library is used-->
				<exclude>**/bouncycastle/**/1.66/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>