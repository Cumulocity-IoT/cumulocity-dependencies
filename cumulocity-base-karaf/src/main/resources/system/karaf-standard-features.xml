        resolver="(obr)">
        <configfile finalname="/etc/jetty.xml">mvn:org.apache.karaf/apache-karaf/${karaf.version}/xml/jettyconfig</configfile>
        <config name="org.ops4j.pax.web">
            org.osgi.service.http.port=${osgi.service.http.port}
            javax.servlet.context.tempdir=${karaf.data}/pax-web-jsp
            org.ops4j.pax.web.config.file=${karaf.base}/etc/jetty.xml
        </config>
        <feature version="[7.0,8.0)">jetty</feature>
