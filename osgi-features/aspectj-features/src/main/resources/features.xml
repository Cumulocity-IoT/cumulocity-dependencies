<?xml version="1.0" encoding="UTF-8"?>

<features name="aspectj-osgi" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0">

    <feature name="aspectj-all" version="${osgi.aspectj.version}">
        <feature version="${osgi.aspectj.version}">aspectjrt</feature>
        <feature version="${osgi.aspectj.version}">aspectjweaver</feature>
    </feature>
    
    <feature name="aspectjrt" version="${osgi.aspectj.version}">
        <bundle>mvn:com.nsn.cumulocity.dependencies.osgi/aspectjrt/${osgi.aspectj.version}</bundle>
    </feature>
    
    <feature name="aspectjweaver" version="${osgi.aspectj.version}">
        <bundle>mvn:com.nsn.cumulocity.dependencies.osgi/aspectjweaver/${osgi.aspectj.version}</bundle>
    </feature>
    
</features>
